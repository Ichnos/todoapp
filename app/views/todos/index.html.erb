<h1>My Todos</h1>

<p>
	<%= link_to "Create a Todo", new_todo_path %>
</p>
<table>
	<tr>
		<th>Title</th>	
		<th>Description</th>
	</tr>
	<% @todos.each do |todo| %>
	<tr>
		<th><%= todo.name  %></th>
		<th><%= todo.description  %></th>
		<th><%= link_to "Edit", edit_todo_path(todo) %></th>
		<th><%= link_to "Show", todo_path(todo) %></th>
		<td><%= link_to "Delete", todo_path(todo), method: :delete, 
                                 data: { confirm: "Are you sure?"} %></td>
	</tr>
	<% end %>
</table>